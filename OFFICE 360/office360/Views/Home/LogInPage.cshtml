@using System.Web.Mvc.Html

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LogInLayOut.cshtml";

}

@using (Html.BeginForm("GET_USER_CONFIRMATION", "Home", FormMethod.Post))
{
<fieldset style="font-family:Arial;">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="app">
        <div class="app-wrap">
            <div class="loader">
                <div class="h-100 d-flex justify-content-center">
                    <div class="align-self-center">
                        <img src="~/_Theme/assets/img/loader/loader.svg" alt="loader">
                    </div>
                </div>
            </div>
            <div class="app-contant">
                <div class="bg-white">
                    <div class="container-fluid p-0">
                        <div class="row no-gutters">
                            <div class="col-sm-6 col-lg-5 col-xxl-3  align-self-center order-2 order-sm-1">
                                <div class="d-flex align-items-center h-100-vh">
                                    <div class="login p-50">
                                        <h1 class="mb-2">We Are Mentor</h1>
                                        <p>Welcome back, please login to your account.</p>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="form-group">
                                                    @Html.Label("UserName", new { @class = "control-label" })
                                                    @Html.TextBox("UserName", null, new { @class = "form-control", placeholder = "Please UserName Here!" })
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    @Html.Label("Password", new { @class = "control-label" })
                                                    @Html.TextBox("Password", null, new { @class = "form-control", placeholder = "Please Password Here!" })
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="d-block d-sm-flex  align-items-center">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="gridCheck">
                                                        <label class="form-check-label" for="gridCheck">
                                                            Remember Me
                                                        </label>
                                                    </div>
                                                    <a href="javascript:void(0);" class="ml-auto">Forgot Password ?</a>
                                                </div>
                                            </div>
                                            <div class="col-12 mt-3">
                                                <input type="submit" class="btn btn-primary account-btn" value="LogIn" />
                                            </div>
                                            <div class="col-12  mt-3">
                                                <p>Don't have an account ?<a href="auth-register.html">Sign Up</a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-xxl-9 col-lg-7 bg-gradient o-hidden order-1 order-sm-2">
                                <div class="row align-items-center h-100">
                                    <div class="col-7 mx-auto ">
                                        <img class="img-fluid" src="~/_Theme/assets/img/bg/login.svg" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</fieldset>
}
 